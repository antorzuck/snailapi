from snailapi import SnailApi


def test(req, res):
   if req.method == 'POST':
       res.send({"msg":"hello from middleware"})
   else:
       return True


app = SnailApi()
app.add_middleware(test)


@app.get("/home")
def user(req, res):

    return res.send({
    "method":req.method,
    "q" : req.GET.get('q')
    })

